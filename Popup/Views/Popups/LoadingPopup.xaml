<?xml version="1.0" encoding="utf-8" ?>
<views:Popup
        xmlns:views="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="Popup.Views.Popups.LoadingPopup"
        CanBeDismissedByTappingOutsideOfPopup="False"
        >
    <VerticalStackLayout x:Name="verticalStackLayout">
        <Label
            x:Name="label"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="5">
            <Label Text="CanBeDismissedByTappingOutsideOfPopup"/>
            <CheckBox x:Name="chkDismiss" CheckedChanged="chkDismiss_CheckedChanged"/>
        </HorizontalStackLayout>
        
    </VerticalStackLayout>
</views:Popup>
